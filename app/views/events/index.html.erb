<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date event</th>
      <th>Responsible</th>
      <th>Location</th>
      <th>Situation</th>
      <th>Details</th>
      <th>Work time</th>
      <th>Price</th>
      <th>Note</th>
      <th>Ballet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date_event %></td>
        <td><%= event.responsible %></td>
        <td><%= event.location %></td>
        <td><%= event.situation %></td>
        <td><%= event.details %></td>
        <td><%= event.work_time %></td>
        <td><%= event.price %></td>
        <td><%= event.note %></td>
        <td><%= event.ballet %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

