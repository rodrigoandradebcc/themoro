<div class="">
  <div class="panel panel-primary">
    <div class="panel-headind">
      <h3 class="panel-title">Eventos</h3>
    </div>
    <div class="panel-body">
      <table class="table table-hover" id="dev-table">
        <thead>
          <tr>
            <th>#</th>
            <th>Data</th>
            <th>Nome do Evento</th>
            <th>Empresa ou Responsável</th>
            <th>Local do Evento</th>
            <th>Pago</th>
            <th>Horas de duração</th>
            <th>Preço</th>
            <th>Dançarinos</th>
            <th colspan="3">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @events.each do |event| %>
          <tr>
            <td><%= event.id %></td>
            <td><%= l event.date_event %></td>
            <td><%= event.name %></td>
            <td><%= event.responsible %></td>
            <td><%= event.location %></td>
            <td><%= vouf event.situation %></td>
            <td><%= event.work_time %></td>
            <td><%= event.price %></td>
            <td><%= vouf event.ballet %></td>
            <td><%= link_to 'Ver', event, class: "btn btn-primary" %></td>
            <td><%= link_to 'Editar', edit_event_path(event), class: "btn btn-primary" %></td>
            <td><%= link_to 'Exluir', event, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to 'Cadastrar Evento', new_event_path, class: "btn btn-primary" %>


